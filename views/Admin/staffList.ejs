<body>
    <%- include("header", {active: "Staff List", adminname: adminname}); %>
        <div style="margin-top: 5%;" class="offset-4">
            <form class="form-inline"  action="/adminDashboard/stafflist" method="GET">
                <input class="form-control col-4" name="search" type="search" placeholder="Search" aria-label="Search">
                <button type="submit" class="btn btn-outline-success offset-1">Search</button>
            </form>
        </div>
        <div class="row">
            <% for(var i = 0; i < doctors.length; i++) {%>
            <div class="col-12 offset-2 col-md-3 offset-md-1">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <% year = doctors[i].dob.slice(0,4) %>
                        <% today = new Date();%>
                        <% year = today.getFullYear()-year; %>
                        <img class="card-img-top" src="https://imgs.search.brave.com/_nY3uwR_g3aWhWjoGX2CJy6ke08HVVCnevXkhE_v-nE/rs:fit:1200:1200:1/g:ce/aHR0cDovL3d3dy5w/dWJsaWNkb21haW5w/aWN0dXJlcy5uZXQv/cGljdHVyZXMvMjEw/MDAwL3ZlbGthL2Rv/Y3Rvci0xNDkwODA0/NjQzUmZpLmpwZw" alt="Card image cap">
                        <h4>Name: <%= doctors[i].name %></h4>
                        <h5>Age: <%= year %> years</h5>
                        <h5>Dept: <%= doctors[i].specialist %></h5>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
